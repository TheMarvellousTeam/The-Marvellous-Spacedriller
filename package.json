{
    "name": "the-marvellous-ritual",
    "version": "0.1.0",
    "license": "MIT",

    "dependencies": {
        "three": "*",
        "three-orbit-controls": "*",
        "gl-matrix": "2.x",
        "express" : "*"
    },

    "devDependencies": {
        "eslint" : "*",
        "babel-eslint" : "*",
        "eslint-plugin-react" : "*",

        "webpack" : "1.x",
        "babel-cli": "^6.0.0",
        "babel-loader" : "6.x",
        "json-loader" : "0.5",
        "babel-core" : "6.x",
        "babel-preset-es2015": "6.x",
        "babel-preset-stage-2": "6.x",
        "babel-plugin-transform-runtime": "6.x"
    },

    "engines": {
        "node": "4.x"
    },

    "scripts": {
        "build-front": "env NODE_ENV=\"production\" node -e \"require('./front/webpack')( require('./webpack.config.js'), function(err, stats){ if( err || stats.hasErrors() ){ console.log( stats.toJson().errors ); process.exit(1) } } )\"",
        "build-back": "babel --presets es2015,stage-2 --out-dir ./dist/back ./back",

        "dev": "node node_modules/webpack-dev-server/bin/webpack-dev-server.js --port 8082 --content-base ./ -d"
    }

}
